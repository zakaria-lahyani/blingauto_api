				{
					"name": "Admin - List All Users (âœ“)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Admin can list users\", function() {",
									"    pm.response.to.have.status(200);",
									"    pm.expect(pm.response.json()).to.have.property('users');",
									"});"
								],
								"type": "text/javascript"
							}
						}
